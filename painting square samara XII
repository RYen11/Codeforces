    #define time  cerr<< '\n' << "Time elapsed :" << clock() * 1000.0 / CLOCKS_PER_SEC << " ms\n" ;
    #define IOS        ios_base::sync_with_stdio(false);cin.tie(0);cout.tie(0);
    using namespace std;
     
    int main()
    {   ll a,b;
        cin>>a>>b;
        ll ex=a%b;
        a=a*a-b*b-(ex)*(ex);
        cout<<(a+b-1)/b + ex;
    }
